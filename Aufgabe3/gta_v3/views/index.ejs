<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="./javascripts/geotagging.js"></script>
</head>

<body>
    <header class="header">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main row">
        <section class="main__tagging tagging col-4">
            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="/tagging" method="post">
                <h2>Tagging</h2>
                <fieldset class="main__tagging__fieldset row">
                    <legend>Add a new GeoTag</legend>

                    <label form="tag-form">Latitude:</label>
                    <input type="text" name="latitude" form="tag-form" id="in_latitude"
                        value=49.01379
                        placeholder="e.g. 49.01379"
                        pattern="(-?\d+)(\.\d+)?"
                        minlength=1
                        required
                        readonly>

                    <label form="tag-form">Longitude:</label>
                    <input type="text" name="longitude" form="tag-form" id="in_longitude" 
                        placeholder="e.g. 8.390071"
                        value=8.390071
                        pattern="(-?\d+)(\.\d+)?"
                        minlength=1
                        required
                        readonly>

                    <label form="tag-form">Name:</label>
                    <input type="text" name="name" form="tag-form" id="in_name" 
                        placeholder="e.g. Central Berlin"
                        pattern="[a-zA-Z]+"
                        minlength=1
                        maxlength=10
                        required>
             
                    <label form="tag-form">Hashtag:</label>
                    <input type="text" name="hashtag" form="tag-form" id="in_hashtag" 
                        placeholder="e.g. #ber"
                        pattern="#[a-zA-Z]+"
                        minlength=0
                        maxlength=11>

                    <input type="submit" value="Add Tag">
                </fieldset>
            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery discovery col-8">
            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="post">
                <h2>Discovery</h2>
                <fieldset class="main__discovery__fieldset">
                    <legend>Search</legend>
                    <label form="discovery__search">Search term or keywords:</label>
                    <input type="text" form="discovery__search" name="search_key" 
                        placeholder="e.g. Berlin"
                        minlength=1
                        required>

                    <input type="text" name="d_latitude" form="discovery__search" id="search_latitude" hidden>
                    <input type="text" name="d_longitude" form="discovery__search" id="search_longitude" hidden>
                    <input type="submit" value="Search">
                </fieldset>
            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper row">
                <div class="discovery__taglist col-5">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                </div>

                <div class="discovery__map col-7">
                    <img src="./images/mapview.jpg" alt="a map with locations" id="mapView" />
                    <span>Result map</span>
                </div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>
</body>

</html>